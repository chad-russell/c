[Unit]
Description=SearXNG Valkey (Redis) - In-memory cache
After=searxng.network

[Container]
ContainerName=searxng-valkey
Image=docker.io/valkey/valkey:8-alpine
Network=searxng.network

# Valkey configuration - save to disk every 30 seconds if at least 1 key changed
Exec=valkey-server --save 30 1 --loglevel warning

# Data persistence
Volume=searxng-valkey-data.volume:/data

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target default.target



